    "engines": {
        "node": ">=14 <=16"
    },
    "dependencies": {},
    "scripts": {
        "prepare": "yarn run compile && yarn run export",
        "test": "hardhat test",
        "lint": "eslint",
        "format": "prettier --config .prettierrc --ignore-path .prettierignore --write --plugin ../node_modules/prettier-plugin-solidity",
        "hardhat:node": "hardhat node --hostname 0.0.0.0 --show-stack-traces",
        "deploy": "ts-node --transpile-only cli/cli.ts deploy",
        "hh-export-abi": "hardhat abi:export",
        "hh-deploy": "hardhat deploy",
        "hh-console": "hardhat console --network localhost",
        "delete-deployment": "ts-node --transpile-only cli/cli.ts delete-deployment",
        "update-client": "ts-node --transpile-only cli/cli.ts update-client",
        "patch-contracts-locally": "hardhat deploy --network localhost",
        "compile": "(rm -rf artifacts|| true ) && (rm -rf typechain || true) && hardhat compile --force",
        "size": "hardhat size-contracts",
        "export": "hardhat abi:export --path '../client/public/abi.json' && (rm -r ../client/src/typechain || true) && cp -r typechain ../client/src/typechain",
        "export-dev-bootloader": "hardhat export --network localhost --export '../dev-bootloader/public/contracts.json'",
        "format-sol": "prettier --config .prettierrc --ignore-path .prettierignore --write --plugin ../node_modules/prettier-plugin-solidity 'contracts/**/*.sol'",
        "deploy-and-setup-paymaster-local": "npx hardhat --network localhost paymaster:deploy --show-stack-traces && npx hardhat --network localhost paymaster:setup --show-stack-traces && npx hardhat --network localhost paymaster:whitelist --show-stack-traces && npx hardhat --network localhost paymaster:fund --show-stack-traces",
        "set-forwarder-local": "npx hardhat --network localhost config:set-trusted-forwarder --show-stack-traces",
        "set-config-local": "hardhat config:set --network localhost"
    }
}